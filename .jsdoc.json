{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["./src/client", "package.json", "README.md", "./src/server"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs|dist/|coverage/|tests)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true
    },
    "opts": {
        "destination": "./quality/docs/",
        "encoding": "utf8",
        "private": true,
        "recurse": true,
        "template": "./node_modules/ink-docstrap/template"
    }
}
